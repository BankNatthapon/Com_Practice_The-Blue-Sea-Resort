@model IEnumerable<TheBlueSeaResort_v2.Models.Customer>

@{
    ViewBag.Title = "SearchRoomType";
}

<!-- ------------------- Sidebar ------------------- -->
<div style="margin-top:50px">
    <div class="w3-sidebar w3-bar-block w3-light-grey w3-card-4 w3-animate-left" style="width:20%">
        <div class="w3-bar w3-dark-grey">
            <span class="w3-bar-item w3-padding-24">Content</span>
        </div>
        <div class="w3-bar-block ">
            <button type="button" class="w3-bar-item w3-button w3-border-bottom w3-hover-teal w3-padding-16">
                @Html.ActionLink("Customer Management", "Index")
            </button>
            @if (Session["Status"].ToString() == "admin")
            {
                <button type="button" class="w3-bar-item w3-button w3-border-bottom w3-hover-teal w3-padding-16">
                    @Html.ActionLink("Admin Management", "AdminIndex")
                </button>
                <button type="button" class="w3-bar-item w3-button w3-border-bottom w3-hover-teal w3-padding-16">
                    @Html.ActionLink("Room Management", "RoomTypeIndex")
                </button>
            }
        </div>
    </div>
</div>
<!-- ----------------------------------------------- -->
<div style="margin-left:20%">
    <div class="w3-container w3-teal">
        <h1>Type Room Managemant</h1>
    </div>
    <div class="w3-container">
        <h4>ระบบจัดการห้อง</h4>
        @using (Html.BeginForm("SearchRoomType", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
            {
            <div class="form-inline">
                <div class="form-group">
                    <label for="ex3">Room Type</label>
                    @Html.TextBox("RoomType", "", new { @class = "form-control", @placeholder = "Room Type Search" })
                </div>
                <div class="form-group" style="margin-left:2%">
                    <button type="submit" value="Submit" class="btn btn-success btn-sm">Enter</button>
                </div>
                <div class="form-group" style="margin-left:2%">
                    <a href="/Admin/RoomTypeIndex">Reset</a>
                </div>
            </div>
        }
        <button type="button" class="btn btn-warning btn-sm col-md-offset-10">
            @Html.ActionLink("Create Room Type", "CreateRoomType")
        </button>
        <br>
        <br>
        <table class="w3-table-all w3-hoverable">
            <thead>
                <tr class="w3-light-grey">
                    <th>
                        Room Type
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Editor
                    </th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>

                    <td>
                        <button type="button" class="btn btn-info">
                            @Html.ActionLink("Room Management", "RoomManagement", new { id = item.Type_Id })
                        </button>
                        <button type="button" class="btn btn-primary">
                            @Html.ActionLink("Edit", "RoomTypeEdit", new { id = item.Type_Id })
                        </button>
                        <button type="button" class="btn btn-danger">
                            @Html.ActionLink("Delete", "DeleteRoomType", new { id = item.Type_Id })
                        </button>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
