<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    
    <link href="https://fonts.googleapis.com/css?family=Tauri" rel="stylesheet">

    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/bootstrap2/css/bootstrap.min.css" charset="utf-8">
    <script type="text/javascript" src="~/Content/datatable/js/jquery.js"></script>
    <script type="text/javascript" src="~/Content/bootstrap2/js/bootstrap.js"></script>
    <link rel="stylesheet" href="~/Content/font awesome/css/font-awesome.css" charset="utf-8">

</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <div class="navbar-brand">@Html.ActionLink("TheBlueSeaResort", "Index", "Home")</div>
            </div>
            <ul class="nav navbar-nav">
                <li class="active">@Html.ActionLink("Home", "Index", "Admin")</li>
                @if (Session["FirstName"] != null && Session["Status"].ToString() == "admin")
                {
                <li>@Html.ActionLink("Create Admin", "AdminCreate")</li>
                }
                <!-- <li><a href="#">Page 1</a></li> -->
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <!-- <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Tools
                    <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                      <li><a href="#">Editor</a></li>
                      <li><a href="#">Update</a></li>
                      <li><a href="#">Seat Manager</a></li>
                      <li><a href="#">Barcode</a></li>
                      <li><a href="#">faculty Orders</a></li>
                    </ul>
                  </li> -->
                @if (Session["FirstName"] == null)
                {
                    <li><a href="/Login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                }
                else
                {
                    <li><a href="/Login/Logoff"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                    if (Session["Status"].ToString() == "admin")
                    {
                        <li><a href="#"><span class="glyphicon glyphicon-user"></span> Admin @Session["FirstName"].ToString()</a></li>
                    }
                    else
                    {
                        <li><a href="#"><span class="glyphicon glyphicon-user"></span> @Session["FirstName"].ToString()</a></li>
                    }

                }
            </ul>
        </div>
    </nav>
   
    @RenderBody()
@if (Session["FirstName"] != null)
{
    <footer>
        <div style="margin-left:21%">Last Admin Login : @Session["LastLogin"].ToString()</div>
    </footer>
}
</body>
</html>