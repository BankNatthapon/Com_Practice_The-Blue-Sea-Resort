<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/File/bootstrap3/css/bootstrap.css" rel="stylesheet">
    <script src="~/Content/File/jquery/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="~/Content/File/datepicker/js/bootstrap-datepicker.js"></script>
    <link href="~/Content/File/datepicker/css/bootstrap-datepicker3.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Tauri" rel="stylesheet">
    <script type="text/javascript">
        $(document).ready(function () {
            $('.input-group.date').datepicker({
                format: "dd/mm/yyyy",
                todayBtn: "linked",
                startDate: "now",
                autoclose: true,
                todayHighlight: true
            });
        });
    </script>
</head>
<body>
    <!-- Navbar -->
    <nav id="scrollingNav" class="nav navbar-default bg-non-bg navbar-fixed-ohm" role="navigation">
        <div class="container">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse"
                            data-target=".navbar-ex1-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">
                        <div class="logo-xs visible-xs"></div>
                        <div class="logo-ls hidden-xs"></div>
                    </a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse navbar-ex1-collapse">

                    <ul class="nav navbar-nav navbar-right">
                        <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Gallery", "Gallery", "Home")</li>
                        <li>@Html.ActionLink("Room", "Room", "Home")</li>
                        <li>@Html.ActionLink("Restaurant", "Restaurant", "Home")</li>
                        <li>@Html.ActionLink("Contact us", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Review", "Index", "Review")</li>
                        @if (Session["FirstName"] != null)
                        {
                            <li><a href="/Admin">Admin Manager</a></li>
                        }
                        <!----------- Form Dropdown ------------->
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b>Booking</b> <span class="caret"></span></a>
                            <ul id="login-dp" class="dropdown-menu">
                                <li>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <form class="form" role="form" method="post" action="/Booking/Index" accept-charset="UTF-8" id="login-nav">
                                                Check In Date
                                                <div class="form-group">
                                                    <div class="input-group date">
                                                        <input type="text" class="form-control" name="checkin"><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                                    </div>
                                                </div>
                                                Check Out Date
                                                <div class="form-group">
                                                    <div class="input-group date">
                                                        <input type="text" class="form-control" name="checkout"><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <button type="submit" class="btn btn-primary btn-block">Check Availability</button>
                                                </div>
                  
                                            </form>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </li>
                        <!-- --------------------------------- -->
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->

        </div>
    </nav>
    @RenderBody()
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
